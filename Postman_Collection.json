{
	"info": {
		"name": "Employee Management Auth API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Create/Update User (Admin)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"admin\",\n    \"password\": \"12345\"\n}"
				},
				"url": {
					"raw": "http://localhost:9090/api/admin/users",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "9090",
					"path": [
						"api",
						"admin",
						"users"
					]
				},
				"description": "Create a new user with BCrypt hashed password. If user exists, update password."
			}
		},
		{
			"name": "2. Login",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"admin\",\n    \"password\": \"12345\"\n}"
				},
				"url": {
					"raw": "http://localhost:9090/api/auth/login",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "9090",
					"path": [
						"api",
						"auth",
						"login"
					]
				},
				"description": "Login with username and password. Returns JWT token."
			}
		},
		{
			"name": "3. Update Password",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"password\": \"12345\"\n}"
				},
				"url": {
					"raw": "http://localhost:9090/api/admin/users/admin/password",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "9090",
					"path": [
						"api",
						"admin",
						"users",
						"admin",
						"password"
					]
				},
				"description": "Update password for existing user"
			}
		}
	]
}


